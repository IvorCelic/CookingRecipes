@using CookingRecipes.Models
@model List<Category>

@section title {
    <h3>Kategorije</h3>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a href="/categories/edit/1">Promjeni</a>
                    <a href="#">Obriši</a>
                </td>
            </tr>
        }

    </tbody>
</table>